<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="@dimen/_16dp"
    android:paddingTop="@dimen/_10dp"
    android:paddingRight="@dimen/_16dp"
    android:paddingBottom="@dimen/_10dp">

    <TextView
        android:id="@+id/tv_settings_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_toEndOf="@+id/iv_settings_icon"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_settings_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_settings_icon" />

    <TextView
        android:id="@+id/tv_settings_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_settings_name"
        android:layout_alignStart="@+id/iv_settings_icon"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_settings_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_name" />

    <ImageView
        android:id="@+id/iv_settings_icon"
        android:layout_width="@dimen/_24dp"
        android:layout_height="@dimen/_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_about" />

</androidx.constraintlayout.widget.ConstraintLayout>